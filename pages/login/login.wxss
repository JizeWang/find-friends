.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  min-height: 100vh;
  background-color: #f8f8f8;
}
.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
  color: #333;
}
.form {
  width: 100%;
}
.input {
  width: 100%;
  height: 80rpx;
  margin-bottom: 40rpx;
  border: 1px solid #ddd;
  border-radius: 12rpx;
  padding: 0 20rpx;
  background-color: #fff;
}
.btn-login {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 12rpx;
  font-size: 30rpx;
}
.options {
  margin-top: 40rpx;
  text-align: center;
}

.link {
  color: #576b95;
  font-size: 28rpx;
  margin: 0 20rpx;
}

.link-split {
  color: #ccc;
  font-size: 28rpx;
}
