<view class="container">
  <view class="title">用户登录</view>

  <form bindsubmit="onLogin" class="form">
    <input class="input" name="username" placeholder="请输入账号" />
    <input class="input" name="password" type="password" placeholder="请输入密码" />
    <button class="btn-login" formType="submit">登录</button>
  </form>

  <view class="options">
    <text bindtap="onForgotPassword" class="link">忘记密码？</text>
    <text class="link-split">|</text>
    <text bindtap="onRegister" class="link">注册账号</text>
  </view>
</view>
