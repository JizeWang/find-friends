page {
  box-sizing: border-box;
  background: #f5f5f5;
  padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx);
}

.home-page {
  padding: 0 24rpx 24rpx;
}

/* 顶部导航 */
.topbar {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.topbar .location {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #333;
  font-size: 28rpx;
}

.topbar .avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
}

/* 轮播 */
.swiper-wrap {
  margin-top: 16rpx;
  border-radius: 16rpx;
  overflow: hidden;
}
.t-image__swiper,
.swiper-wrap swiper,
.swiper-wrap t-swiper {
  width: 100%;
  height: 300rpx;
}

/* 搜索 */
.search {
  margin: 20rpx 0;
}
.t-search__input-container {
  border-radius: 32rpx !important;
  height: 64rpx !important;
  background: #fff !important;
}
.t-search__input {
  font-size: 28rpx !important;
  color: #747474 !important;
}

/* 列表 */
.trip-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.trip-card {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06);
}

.trip-avatar {
  width: 108rpx;
  height: 108rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.trip-main { flex: 1; }

.tags { display: flex; gap: 12rpx; }

.title {
  margin-top: 8rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #222;
}

.meta, .stats {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #888;
  font-size: 24rpx;
  margin-top: 6rpx;
}

.stats .price {
  color: #e85c41;
  font-weight: 600;
}

.dot { margin: 0 6rpx; }

.host {
  margin-top: 8rpx;
  color: #aaa;
  font-size: 22rpx;
}